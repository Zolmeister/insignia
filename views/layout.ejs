<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Zolmeister - insignia</title>
  
    <!-- Viewport mobile tag for sensible mobile support -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
  
    <!-- TODO: host locally -->
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.3.0/pure-min.css">
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css">
    <link href='http://fonts.googleapis.com/css?family=Lato:300,400' rel='stylesheet' type='text/css'>
    
    <% if(sails.config.environment === 'production') { %>
      <link rel="stylesheet" href="dist/styles.css">
    <% } else { %>
      <link rel="stylesheet" href="css/app.css">
      <link rel="stylesheet" href="css/project.css">
      <link rel="stylesheet" href="css/project-list.css">
      <link rel="stylesheet" href="css/animation.css">
    <% } %>
  </head>
  
  <body ng-app="insignia">
    <!-- Include the view file for the current controller/route -->
    <%- body %>
    
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    
    <% if(sails.config.environment === 'production') { %>
      <script src='dist/lib.js'></script>
      <script src='dist/app.js'></script>
    <% } else { %>
      <script src='lib/lodash.js'></script>
      <script src="lib/angular/angular.js"></script>
      <script src="lib/angular/angular-route.js"></script>
      <script src="lib/angular/angular-touch.js"></script>
      <script src="lib/angular/angular-cookies.js"></script>
      <script src="lib/angular/angular-resource.js"></script>
      <script src='lib/angular/angular-animate.js'></script>
      <script src='lib/angular/angular-file-upload.js'></script>
      <script src='lib/jquery.sortable.js'></script>
      <script src="js/app.js"></script>
      <script src="js/services.js"></script>
      <script src="js/controllers.js"></script>
      <script src="js/filters.js"></script>
      <script src="js/directives.js"></script>
    <% } %>
  </body>
</html>
